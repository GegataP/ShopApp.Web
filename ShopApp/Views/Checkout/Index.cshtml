@using ShopApp.Data
@model Address

@{
    List<Address> addresses = ViewBag.Addresses;
}

<div class="container">


    <div class="row">
        

            @foreach(var address in addresses)
            {
            <div class="col-md-4 mb-2">
                <div class="card-body">
                    @* <h5>@address.User</h5>*@
                        <p>@address.AddressLine, @address.City , @address.State - @address.PinCode</p>
                    <a asp-controller="Checkout" asp-action="Confirm" asp-route-addressId="@address.Id" class="btn btn-primary">Deliver here</a>
                </div>
            </div>
            }

       
    </div>

    <form asp-action="Index">
        <div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="AddressLine" class="control-label"></label>
            <input asp-for="AddressLine" class="form-control"/>
            <span asp-validation-for="AddressLine" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="City" class="control-label"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="State" class="control-label"></label>
            <input asp-for="State" class="form-control" />
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PinCode" class="control-label"></label>
            <input asp-for="PinCode" class="form-control" />
            <span asp-validation-for="PinCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
        
    </form>    
</div>

 

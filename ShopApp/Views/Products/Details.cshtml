@using ShopApp.ViewModels
@model ProductViewModel

<!-- Header-->
<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Product details</h1>
            <p class="lead fw-normal text-white-50 mb-0">@Model.Name</p>
        </div>
    </div>
</header>

<section class="py-5">
    <div class="container mb-5 mt-5">
        <div class="card">
            <div class="row g-0">
                <!-- Left Column: Product Image -->
                <div class="col-md-4 border-end">
                    <div class="d-flex flex-column justify-content-center">
                        <div class="main_image">
                            <img src="@Model.ImageUrl" id="main_product_image" class="img-fluid" alt="Product Image">
                        </div>
                    </div>
                </div>

                <!-- Right Column: Product Details -->
                <div class="col-md-8">
                    <div class="p-3 right-side">
                        <h3>@Model.Name</h3>
                        <div class="mt-2 pr-3 content">
                            <p>
                                @Model.Description
                            </p>
                        </div>
                        <h3>@Model.Price</h3>
                        <div>
                            <a asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@Model.Id" class="btn btn-outline-dark mt-auto">Add to cart</a>
                        </div>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-success w-100 border mt-2">Back to shop</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
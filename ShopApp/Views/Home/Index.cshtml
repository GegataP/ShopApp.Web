@using ShopApp.ViewModels
@using ShopApp.Data
@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<!-- Section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
           
            @foreach (var product in Model.Products)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Sale badge-->
                        @*@<div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div> *@
                        <!-- Product image-->
                        <img class="card-img-top" src="@product.ImageUrl" alt="@product.Name" />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@product.Name</h5>
                                <p class="">@product.Description</p>
                                <!-- Product price-->
                               @*@ @{
                                    var oldPrice = product.Price * 2;
                                }
                                <span class="text-muted text-decoration-line-through">$@oldPrice</span> *@
                                $@product.Price
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <a asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.Id" class="btn btn-outline-dark mt-auto">Add to cart</a>
                            </div>
                        </div>
                    </div>
                </div>
            }

            
           
        </div>
    </div>
</section>
